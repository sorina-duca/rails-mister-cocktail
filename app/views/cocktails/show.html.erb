<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <div class="card-category-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo.key, crop: :fill %>)">
        <h1><strong><%= @cocktail.name.upcase %></strong></h1>
      </div>
    </div>
  <div class="col-md-4">
    <div class="container mt-3">
      <h4>Ingredients</h4>
      <ol>
        <% @cocktail.doses.each do |dose|%>
          <li><%= dose.ingredient.name %> (<%= dose.description %>)  <%= link_to "‚å´", dose_path(dose), method: :delete %></li>
        <% end %>
      </ol><br>
      <h4>Reviews</h4>
      <ul>
        <% @cocktail.reviews.each do |review|%>
          <li><%= review.content %>  <%= review.rating%>üç∏</li>
        <% end %>
      </ul>
      <p><%= link_to 'Back to all cocktails', root_path %></p>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row mt-3">
    <div class="col-md-6">
       <%= render "doses/new" %>
    </div>
    <div class="col-md-6">
      <%= render "reviews/review_form" %>
    </div>
  </div>
</div>


