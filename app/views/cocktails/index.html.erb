<div class="card-category-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path('cocktail_banner.jpg') %>)">
  <h1>Sassy cocktails 🍹  </h1>
</div>
<div class="d-flex justify-content-center fixed-top">
  <%= link_to "Add your own fancy cocktail!",  new_cocktail_path, class: "btn btn-flat" %>
</div>

<div class="container mt-3">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, height: 400, width: 360, crop: :fill %>)">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: "btn btn-flat" %></h2>
      </div>
    <% end %>
  </div>
</div>
